@using TutorialMultiTablesNETCore.Models
@model Actividad

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h3>Editar Actividad</h3>​
            <form asp-controller="Actividad" asp-action="EditActividad" method="post">​
                <div class="form-group">
                    <input asp-for="ActividadId" type="hidden" />​
                    <label asp-for="Nombre">Nombre de la Actividad</label>​
                    <input asp-for="Nombre" class="form-control" />​
                    <br />
                    <label asp-for="Plazas">Plazas Disponibles</label>​
                    <input asp-for="Plazas" class="form-control" />​
                </div>
                <br />​
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Actualizar Actividad</button>​
                </div>
            </form>​
        </div>
    </div>
</div>